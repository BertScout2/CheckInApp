<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CheckInApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a submarine number ten" />

            <Entry
                x:Name="EntryName"
                Text=""
            />

            <Button
                x:Name="CheckIn"
                Text="Check In" 
                SemanticProperties.Hint="Check in today"
                Clicked="CheckInClicked"
                HorizontalOptions="Start" />

            <Button
                 x:Name="CheckOut"
                 Text="Check Out" 
                 SemanticProperties.Hint="Check out today"
                 Clicked="CheckOutClicked"
                 HorizontalOptions="Start" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
